<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:text="@string/select_recovery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <RadioGroup
        android:id="@+id/radio_recovery_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/radio_recovery_cwm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/cyanogen_clockworkmod" />

        <RadioButton
            android:id="@+id/radio_recovery_openrecovery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/openrecovery_twrp"
            android:checked="true" />

    </RadioGroup>
</LinearLayout>
