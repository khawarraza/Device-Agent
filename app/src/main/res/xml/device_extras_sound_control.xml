<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:dc="http://schemas.android.com/apk/res-auto">

    <org.namelessrom.devicecontrol.ui.preferences.CustomPreferenceCategory android:title="@string/microphone" />

    <org.namelessrom.devicecontrol.ui.preferences.AwesomeSeekBarPreference
        android:defaultValue="0"
        android:key="microphone_gain"
        android:max="20"
        android:persistent="false"
        android:summary="@string/empty"
        android:title="@string/empty"
        dc:category="features"
        dc:filePath="@string/file_sc_ff_microphone_gain"
        dc:min="0"
        dc:unitsLeft=""
        dc:unitsRight="" />

    <org.namelessrom.devicecontrol.ui.preferences.CustomPreferenceCategory android:title="@string/speaker" />

    <org.namelessrom.devicecontrol.ui.preferences.AwesomeSeekBarPreference
        android:defaultValue="0"
        android:key="speaker_gain"
        android:max="20"
        android:persistent="false"
        android:summary="@string/empty"
        android:title="@string/empty"
        dc:category="features"
        dc:filePath="@string/file_sc_ff_speaker_gain"
        dc:min="0"
        dc:unitsLeft=""
        dc:unitsRight="" />

    <org.namelessrom.devicecontrol.ui.preferences.CustomPreferenceCategory android:title="@string/headphones" />

    <org.namelessrom.devicecontrol.ui.preferences.AwesomeSeekBarPreference
        android:defaultValue="0"
        android:key="volume_gain"
        android:max="20"
        android:persistent="false"
        android:summary="@string/empty"
        android:title="@string/empty"
        dc:category="features"
        dc:filePath="@string/file_sc_ff_volume_gain"
        dc:min="0"
        dc:unitsLeft=""
        dc:unitsRight="" />

    <org.namelessrom.devicecontrol.ui.preferences.CustomPreference
        android:key="sc_version"
        android:selectable="false"
        android:summary="@string/empty"
        android:title="@string/version" />

</PreferenceScreen>
