<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:dc="http://schemas.android.com/apk/res-auto">

    <org.namelessrom.devicecontrol.ui.preferences.AwesomeTogglePreference
        android:key="core_control"
        android:title="@string/core_control"
        android:summary="@string/core_control_summary"
        dc:filePathList="@array/files_core_control"
        dc:category="extras" />

    <org.namelessrom.devicecontrol.ui.preferences.AwesomePreferenceCategory
        android:key="msm_thermal"
        android:title="@string/msm_thermal"
        dc:filePath="@string/directory_msm_thermal" />

    <org.namelessrom.devicecontrol.ui.preferences.CustomPreferenceCategory
        android:key="intelli_thermal"
        android:title="@string/intelli_thermal">

        <org.namelessrom.devicecontrol.ui.preferences.AwesomeTogglePreference
            android:key="intelli_thermal_enabled"
            android:title="@string/intelli_thermal_enabled"
            android:summary="@string/thermal_warning"
            dc:filePath="@string/file_intelli_thermal"
            dc:category="extras" />

    </org.namelessrom.devicecontrol.ui.preferences.CustomPreferenceCategory>

</PreferenceScreen>
